{
    "name": "mysql-blade",
    "displayName": "MySQL Blade",
    "description": "MySQL management tool",
    "version": "0.5.5",
    "publisher": "meetrice",
    "icon": "logo.png",
    "engines": {
        "vscode": "^1.83.0"
    },
    "categories": [
        "Programming Languages",
        "Azure"
    ],
    "keywords": [
        "SQL",
        "MySQL",
        "Database",
        "DB",
        "RDBMS"
    ],
    "bugs": {
        "url": "https://github.com/meetrice/vscode-mysql-blade/issues",
        "email": "meetrice@gmail.com"
    },
    "homepage": "https://github.com/meetrice/vscode-mysql-blade/blob/master/README.md",
    "repository": {
        "type": "git",
        "url": "https://github.com/meetrice/vscode-mysql-blade.git"
    },
    "activationEvents": [
        "onView:mysql",
        "onCommand:mysql.addConnection",
        "onCommand:mysql.runQuery"
    ],
    "main": "./out/extension",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "mysql-sidebar",
                    "title": "MySQL",
                    "icon": "logo.png"
                }
            ]
        },
        "views": {
            "mysql-sidebar": [
                {
                    "id": "mysqlFilter",
                    "name": "Filter & Snippets",
                    "type": "webview"
                },
                {
                    "id": "mysql",
                    "name": "MySQL"
                }
            ]
        },
        "commands": [
            {
                "command": "mysql.refresh",
                "title": "Refresh",
                "category": "MySQL"
            },
            {
                "command": "mysql.addConnection",
                "title": "Add Connection",
                "icon": {
                    "light": "resources/light/add.svg",
                    "dark": "resources/dark/add.svg"
                },
                "category": "MySQL"
            },
            {
                "command": "mysql.deleteConnection",
                "title": "Delete Connection",
                "category": "MySQL"
            },
            {
                "command": "mysql.editDisplayName",
                "title": "Edit Display Name",
                "category": "MySQL"
            },
            {
                "command": "mysql.runQuery",
                "title": "Run MySQL Query",
                "category": "MySQL"
            },
            {
                "command": "mysql.newQuery",
                "title": "New Query",
                "category": "MySQL"
            },
            {
                "command": "mysql.selectDatabase",
                "title": "Select Database",
                "category": "MySQL"
            },
            {
                "command": "mysql.selectTop1000",
                "title": "Select Top 100",
                "category": "MySQL"
            },
            {
                "command": "mysql.copyTableName",
                "title": "Copy Name",
                "category": "MySQL"
            },
            {
                "command": "mysql.showTableStructure",
                "title": "View Table Structure",
                "category": "MySQL"
            },
            {
                "command": "mysql.viewTableStructureFromEditor",
                "title": "View Table Structure",
                "category": "MySQL"
            },
            {
                "command": "mysql.openTable",
                "title": "Open Table",
                "category": "MySQL"
            },
            {
                "command": "mysql.pinTable",
                "title": "Pin Table",
                "category": "MySQL"
            },
            {
                "command": "mysql.unpinTable",
                "title": "Unpin Table",
                "category": "MySQL"
            },
            {
                "command": "mysql.selectColumn",
                "title": "Select Column",
                "category": "MySQL"
            },
            {
                "command": "mysql.selectFilter",
                "title": "Select Filter",
                "category": "MySQL"
            },
            {
                "command": "mysql.copyColumnName",
                "title": "Copy Name",
                "category": "MySQL"
            },
            {
                "command": "mysql.insertColumnName",
                "title": "Insert to Editor",
                "category": "MySQL"
            },
            {
                "command": "mysql.dropTable",
                "title": "Drop Table",
                "category": "MySQL"
            },
            {
                "command": "mysql.backupTable",
                "title": "Backup Table",
                "category": "MySQL"
            },
            {
                "command": "mysql.countTable",
                "title": "Count",
                "category": "MySQL"
            },
            {
                "command": "mysql.addColumn",
                "title": "Add Column",
                "category": "MySQL"
            },
            {
                "command": "mysql.dropColumn",
                "title": "Drop Column",
                "category": "MySQL"
            },
            {
                "command": "mysql.setTableFilter",
                "title": "Filter Tables",
                "category": "MySQL"
            },
            {
                "command": "mysql.clearTableFilter",
                "title": "Clear Table Filter",
                "category": "MySQL"
            },
            {
                "command": "mysql.collapseAll",
                "title": "Collapse All",
                "icon": {
                    "light": "resources/light/collapse.svg",
                    "dark": "resources/dark/collapse.svg"
                },
                "tooltip": "在未过滤表格,结果太多时,慎用折叠展开,有可能导致崩溃",
                "category": "MySQL"
            },
            {
                "command": "mysql.expandAll",
                "title": "Expand All",
                "icon": {
                    "light": "resources/light/expand.svg",
                    "dark": "resources/dark/expand.svg"
                },
                "tooltip": "在未过滤表格,结果太多时,慎用折叠展开,有可能导致崩溃",
                "category": "MySQL"
            }
        ],
        "keybindings": [
            {
                "command": "mysql.runQuery",
                "key": "ctrl+alt+e",
                "when": "editorLangId == sql"
            },
            {
                "command": "mysql.openTable",
                "key": "cmd+shift+t",
                "mac": "cmd+shift+t",
                "win": "ctrl+shift+t",
                "linux": "ctrl+shift+t"
            },
            {
                "command": "mysql.setTableFilter",
                "key": "ctrl+shift+f",
                "mac": "cmd+shift+f",
                "when": "view == mysql"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "mysql.runQuery",
                    "group": "inline@1"
                },
                {
                    "command": "mysql.viewTableStructureFromEditor",
                    "group": "inline@2"
                }
            ],
            "view/title": [
                {
                    "command": "mysql.addConnection",
                    "when": "view == mysql",
                    "group": "navigation@1"
                },
                {
                    "command": "mysql.expandAll",
                    "when": "view == mysql && !mysqlTreeAllExpanded",
                    "group": "navigation@2"
                },
                {
                    "command": "mysql.collapseAll",
                    "when": "view == mysql && mysqlTreeAllExpanded",
                    "group": "navigation@2"
                }
            ],
            "view/item/context": [
                {
                    "command": "mysql.newQuery",
                    "when": "view == mysql && viewItem == connection",
                    "group": "mysql@1"
                },
                {
                    "command": "mysql.refresh",
                    "when": "view == mysql && viewItem == connection",
                    "group": "mysql@1"
                },
                {
                    "command": "mysql.editDisplayName",
                    "when": "view == mysql && viewItem == connection",
                    "group": "mysql@2"
                },
                {
                    "command": "mysql.deleteConnection",
                    "when": "view == mysql && viewItem == connection",
                    "group": "mysql@3"
                },
                {
                    "command": "mysql.selectDatabase",
                    "when": "view == mysql && viewItem == database",
                    "group": "mysql@0"
                },
                {
                    "command": "mysql.newQuery",
                    "when": "view == mysql && viewItem == database",
                    "group": "mysql@1"
                },
                {
                    "command": "mysql.refresh",
                    "when": "view == mysql && viewItem == database",
                    "group": "mysql@2"
                },
                {
                    "command": "mysql.copyTableName",
                    "when": "view == mysql && viewItem == table",
                    "group": "mysql@1"
                },
                {
                    "command": "mysql.copyTableName",
                    "when": "view == mysql && viewItem == pinnedTable",
                    "group": "mysql@1"
                },
                {
                    "command": "mysql.showTableStructure",
                    "when": "view == mysql && viewItem == table",
                    "group": "mysql@1"
                },
                {
                    "command": "mysql.showTableStructure",
                    "when": "view == mysql && viewItem == pinnedTable",
                    "group": "mysql@1"
                },
                {
                    "command": "mysql.selectTop1000",
                    "when": "view == mysql && viewItem == table",
                    "group": "mysql@0"
                },
                {
                    "command": "mysql.selectTop1000",
                    "when": "view == mysql && viewItem == pinnedTable",
                    "group": "mysql@0"
                },
                {
                    "command": "mysql.refresh",
                    "when": "view == mysql && viewItem == table",
                    "group": "mysql@2"
                },
                {
                    "command": "mysql.refresh",
                    "when": "view == mysql && viewItem == pinnedTable",
                    "group": "mysql@2"
                },
                {
                    "command": "mysql.pinTable",
                    "when": "view == mysql && viewItem == table",
                    "group": "mysql@3"
                },
                {
                    "command": "mysql.unpinTable",
                    "when": "view == mysql && viewItem == pinnedTable",
                    "group": "mysql@3"
                },
                {
                    "command": "mysql.backupTable",
                    "when": "view == mysql && viewItem == table",
                    "group": "mysql@4"
                },
                {
                    "command": "mysql.backupTable",
                    "when": "view == mysql && viewItem == pinnedTable",
                    "group": "mysql@4"
                },
                {
                    "command": "mysql.dropTable",
                    "when": "view == mysql && viewItem == table",
                    "group": "mysql@5"
                },
                {
                    "command": "mysql.dropTable",
                    "when": "view == mysql && viewItem == pinnedTable",
                    "group": "mysql@5"
                },
                {
                    "command": "mysql.countTable",
                    "when": "view == mysql && viewItem == table",
                    "group": "mysql@6"
                },
                {
                    "command": "mysql.countTable",
                    "when": "view == mysql && viewItem == pinnedTable",
                    "group": "mysql@6"
                },
                {
                    "command": "mysql.addColumn",
                    "when": "view == mysql && viewItem == table",
                    "group": "mysql@7"
                },
                {
                    "command": "mysql.addColumn",
                    "when": "view == mysql && viewItem == pinnedTable",
                    "group": "mysql@7"
                },
                {
                    "command": "mysql.selectColumn",
                    "when": "view == mysql && viewItem == column",
                    "group": "mysql@0"
                },
                {
                    "command": "mysql.selectFilter",
                    "when": "view == mysql && viewItem == column",
                    "group": "mysql@1"
                },
                {
                    "command": "mysql.copyColumnName",
                    "when": "view == mysql && viewItem == column",
                    "group": "mysql@2"
                },
                {
                    "command": "mysql.insertColumnName",
                    "when": "view == mysql && viewItem == column",
                    "group": "mysql@3"
                },
                {
                    "command": "mysql.dropColumn",
                    "when": "view == mysql && viewItem == column",
                    "group": "mysql@4"
                }
            ]
        },
        "configuration": {
            "type": "object",
            "title": "MySQL",
            "properties": {
                "vscode-mysql.enableTelemetry": {
                    "type": "boolean",
                    "default": true,
                    "description": "Whether to enable anonymous usage collection."
                },
                "vscode-mysql.maxTableCount": {
                    "type": "integer",
                    "default": 500,
                    "description": "The maximum table count shown in the tree view"
                },
                "vscode-mysql.enableDelimiterOperator": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable support for DELIMITER operator."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "tslint": "tslint -t verbose src/**/*.ts"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.10.14",
        "@types/vscode": "^1.57.0",
        "tslint": "^5.8.0",
        "typescript": "^3.9.10"
    },
    "dependencies": {
        "applicationinsights": "^1.0.0",
        "asciitable": "0.0.7",
        "lru-cache": "6.0.0",
        "mysql2": "^2.3.3",
        "uuid": "^3.1.0"
    }
}
